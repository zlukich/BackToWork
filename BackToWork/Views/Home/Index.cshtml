@{
    @if (User.Identity.IsAuthenticated == true)
    {
        <div>Здравствуйте, @ViewBag.Name</div>
        @if( ViewBag.Role == "freelancer")
        {
            <div><a class="btn btn-sm btn-primary" href="~/Home/EditFreelancerPage/@ViewBag.Name">Edit</a></div>
        }
        else
        {
            <div><a class="btn btn-sm btn-primary" href="~/Home/EditOrdererPage/@ViewBag.Name">Edit</a></div>
        }
        <a href="~/Account/Logout/">Logout</a>
    }
    else
    {
        <div>Не Авторизован</div>

    }

}
